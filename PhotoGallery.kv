Display

<Display>:
    StackLayout:
        orientation: "lr-tb"
        TextInput:
            id: what_image
            hint_text: "Enter image name"
            size_hint: .5,.06
        Button:
            text: "Load image"
            size_hint: .5,.06
            #on_release: root.display_image(True)
        Button:
            text: "Black & white"
            size_hint: .5,.06
            on_release: root.black_white("lfa.jpg")
        Button:
            text: "inverse"
            size_hint: .5,.06
            on_release: root.inverse("lfa.jpg","lfa")
        Button:
            text: "Line drawing"
            size_hint: .5,.06
            on_release: root.line_drawing("lfa.jpg")
        Button:
            text: "Pointillism"
            size_hint: .5,.06
            on_release: root.pointillism("lfa.jpg","lfa")
        Button:
            text: "Sepia"
            size_hint: .5,.06
            on_release: root.sepia("lfa.jpg","lfa")
        Button:
            text: "Pixelate"
            size_hint: .5,.06


        Image:
            source: root.display_image(what_image.text)